html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
}
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
}
@media tablet {
  body {
    max-width: 600px;
    padding: 5rem 0 0 7rem;
  }
}
.Hidden {
  display: none;
  opacity: 0;
}
@media latop {
  .Hidden {
    display: block;
    opacity: 1;
  }
}
img {
  max-width: 100%;
  height: auto;
}
button {
  background: transparent;
  border: 1px solid #ff3431;
  border-radius: 75px;
  color: #ff3431;
  height: 4rem;
  font-size: 1rem;
  letter-spacing: .1em;
  padding: 1rem 3rem;
  text-transform: uppercase;
  cursor: pointer;
  font-family: typeface-secondary;
}
button:hover {
  background: #ff3431
  color: #ffe3e2;
  -webkit-transition: background-color 200ms ease-out;
  -moz-transition: background-color 200ms ease-out;
  -o-transition: background-color 200ms ease-out;
  transition: background-color 200ms ease-out;
}
.op50 {
  opacity: .5;
}
.op30 {
  opacity: .3;
}
.AlignRight {
  text-align: right;
}
.AlignCenter {
  margin: 0 auto;
}

// Intro

.Intro {
  padding: 2rem;
}
.OffsetEmoji {
  position: relative;
}
@media laptop {
  top: -3px;
  font-size: 1.5rem;
}

// Footer

.Divider {
  height: 4px;
  background: #FFE3E2;
  margin: 4rem 2rem
}
@media tablet {
  .Divider {
    Display: none;
  }
}
.OffCenter {
  margin: 2rem;
}
@media laptop {
  .OffCenter {
    grid-column: 5/11;
    grid-row: 346;
    line-height: 200%
  }
}
.FooterHeading {
  margin: 6rem 2rem 4rem 2rem;
}
@media laptop {
  .FooterHeading {
    grid-row: 348;
    grid-column: 2/5;
  }
}
.Contact {
  margin: 4rem 2rem;
}
@media laptop {
  .Contact {
    grid-column: 14/20;
    grid-row: 346;
  }
}
.FooterSpace {
  height: 2rem;
  grid-row: 376;
}
.SmallEmoji {
  font-size: 1rem;
}

















