html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: #000;
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
  }
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0 0 2rem 0;
}
.Hidden {
  display: none;
  opacity: 0;
}
@media latop {
  .Hidden {
    display: block;
    opacity: 1;
  }
}
img {
  max-width: 100%;
  height: auto;
}
button {
  background: transparent;
  border: 1px solid #000;
  border-radius: 5px;
  height: 4rem;
  font-size: 1rem;
  padding: 1rem;
  cursor: pointer;
}
button:hover {
  background: #000;
  color: #fff;
  -webkit-transition: background-color 200ms ease-out;
  -o-transition: background-color 200ms ease-out;
  transition: background-color 200ms ease-out;
}

// Intro

@media laptop {
  .IntroContainer {
    display: flex;
    justify-content: space-between;
  }
}
.IntroText {
  padding: 2rem;
  margin: 3rem;
  -webkit-animation-delay: 0.2s;
  -moz-animation-delay: 0.2s;
  animation-delay: 0.2s;
  font-size: 1.8rem;
}
@media tablet {
  .IntroText {
    max-width: 500px;
  }
}
@media laptop {
  .IntroText {
    padding: 2rem;
    max-width: 39vw;
    font-size: 1.7rem;
  }
}
@media desktop {
  .IntroText {
    padding: 6rem;
    max-width: 39vw;
    font-size: 1.9rem;
  }
}
@media bigscreen {
  .IntroText {
    padding: 6rem 0 0 6rem;
    width: 36%;
    font-size: 1.5vw;
  }
}
@media xlscreen {
  .IntroText {
    padding: 6rem 5rem 0 6rem;
    width: 36%;
    font-size: 1.5vw;
  }
}
.OffsetEmoji {
  position: relative;
  top: 2px;
}
.IntroImgs {
  width: 100%;
  padding-bottom: 100%;
  background-size: 100%;
  transition: transform 200ms ease-out;
  cursor: pointer;
}
.IntroImgs:hover {
  transform: scale(1.03);
}
.Intro {
  padding: 2rem;
}
.OffsetEmoji {
  position: relative;
}
@media laptop {
  top: -3px;
  font-size: 1.5rem;
}
.IntroImgContainer {
  width: 100%;
  -webkit-animation-delay: 0.2s;
  -moz-animation-delay: 0.2s;
  animation-delay: 0.2s;
  overflow: hidden;
}
@media laptop {
  .IntroImgContainer {
    width: 55%;
  }
}
@media bigscreen {
  .IntroImgContainer {
    width: 57%;
  }
}
@media xlscreen {
  .IntroImgContainer {
    width: 67%;
  }
}
.ImgContainer {
  background: #000;
  padding: 3rem;
  min-height: 50px;
  // `min-height` fixes a bug in Firefox which caused the container height to be  shorter than the image inside
 }
.FooterHeading {
  margin: 6rem 2rem 4rem 2rem;
}
@media laptop {
  .FooterHeading {
    grid-row: 348;
    grid-column: 2/5;
  }
}
.Contact {
  margin: 4rem 2rem;
}
@media laptop {
  .ImgContainer {
  background: #000;
  padding: 6rem;
  }
}
@media bigscreen {
  .ImgResized {
    height: auto;
