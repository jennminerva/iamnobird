html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: #000;
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
  }
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
}
img {
  max-width: 100%;
  height: auto;
}
button {
  background: transparent;
  border: 1px solid #000;
  border-radius: 5px;
  height: 4rem;
  font-size: 1rem;
  padding: 1rem;
  cursor: pointer;
}
button:hover {
  background: #000;
  color: #fff;
  -webkit-transition: background-color 200ms ease-out;
  -o-transition: background-color 200ms ease-out;
  transition: background-color 200ms ease-out;
}

// Intro

@media laptop {
  .IntroContainer {
    display: flex;
    justify-content: space-between;
  }
}
.IntroText {
  padding: 2rem;
  -webkit-animation-delay: 0.2s;
  -moz-animation-delay: 0.2s;
  animation-delay: 0.2s;
}
@media laptop {
  .IntroText {
    padding: 6rem 0 0 6rem;
  }
}
@media bigscreen {
  .IntroText {
    padding: 12rem 0 0 12rem;
    font-size: 3rem;
    width: 36%;
  }
}
.OffsetEmoji {
  position: relative;
  top: 2px;
}
.IntroImgs {
  width: 100%;
  padding-bottom: 100%;
  background-size: 100%;
  transition: transform 200ms ease-out;
  cursor: pointer;
}
.IntroImgs:hover {
  transform: scale(1.03);
}
.IntroImgContainer {
  width: 100%; 
  -webkit-animation-delay: 0.2s;
  -moz-animation-delay: 0.2s;
  animation-delay: 0.2s; 
  overflow: hidden;
}
@media tablet {
  .IntroImgContainer {
    width: 55%;
  }
}
@media bigscreen {
  .IntroImgContainer {
    width: 57%;
  }
}
.ImgContainer {
  background: #000;
  padding: 3rem;
}
@media laptop {
  .ImgContainer {
  background: #000;
  padding: 6rem;
  }
}

















